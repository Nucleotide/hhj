!!! html5
html
  head
    title Node Template Project
    link(rel='stylesheet'
      type='text/css'
      href='css/reset.css')
    link(rel='stylesheet'
      type='text/css'
      href='css/screen.css')
    script(src='static-js/jquery-1.6.4.min.js'
      type='text/javascript')
    script(src='static-js/jquery.uniform.min.js'
      type='text/javascript')
    link(rel='stylesheet'
      type='text/css'
      href='css/uniform.default.css')
    script(src='js/application.js'
      type='text/javascript')
    meta(http-equiv='Content-Type'
      content='text/html; charset=UTF-8')

  body
    div#content-wrap
      div#header
        #header-content
          .logo
          .headline
            | Halloped.fi
          .login-info
            .login-name
              span.label Olet kirjautuneena nimell√§:
              br
              span.name Eija Zitting
            a.login-btn(href='#')
      div#navi
        #navi-content
          ul.navi-links
            li: a.home(href='#')
            li: a(href='#') Toimielimet
            li: a(href='#') Haut
            li: a(href='#') Hallopedit
            li: a(href='#') Asiakirjat
            li: a(href='#') Lomakkeet
          form.search
            input.field.search-field(type='text', placeholder='Hae ...')
      div#content
        div#page-content
          include templates/single-organ
          include templates/sidebar
          div.clear

          .modal#create-new-organ
            include forms/create-new-organ

          .modal#call-for-application
            include forms/call-for-application


      div#footer
        p Copyright 2012 Halloped.fi
