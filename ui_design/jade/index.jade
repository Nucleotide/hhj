!!! html5
html
  head
    title Node Template Project
    link(rel='stylesheet'
      type='text/css'
      href='css/reset.css')
    link(rel='stylesheet'
      type='text/css'
      href='css/screen.css')
    script(src='static-js/jquery-1.6.4.min.js'
      type='text/javascript')
    script(src='js/application.js'
      type='text/javascript')
    meta(http-equiv='Content-Type'
      content='text/html; charset=UTF-8')

  body
    div#content-wrap
      div#header
        #header-content
          .logo
          .headline
            | Halloped.fi
          form.login-form
            label.field-label Kirjaudu:
            input.field(type='text', placeholder='Sähköposti')
            input.field(type='text', placeholder='Salasana')
            input.submit-btn(type='submit')
      div#navi
        #navi-content
          ul.navi-links
            li: a.home(href='#')
            li: a(href='#') Toimielimet
            li: a(href='#') Haut
            li: a(href='#') Hallopedit
            li: a(href='#') Asiakirjat
            li: a(href='#') Lomakkeet
          form.search
            input.field.search-field(type='text', placeholder='Hae ...')
      div#content
        div#page-content
          include templates/frontpage
      div#push

    div#footer
      p Copyright 2012 Halloped.fi
