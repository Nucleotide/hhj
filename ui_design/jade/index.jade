!!! html5
html
  head
    title Node Template Project
    link(rel='stylesheet'
      type='text/css'
      href='css/reset.css')
    link(rel='stylesheet'
      type='text/css'
      href='css/screen.css')
    script(src='static-js/jquery-1.6.4.min.js'
      type='text/javascript')
    script(src='static-js/jquery.uniform.min.js'
      type='text/javascript')
    link(rel='stylesheet'
      type='text/css'
      href='css/uniform.default.css')
    script(src='js/application.js'
      type='text/javascript')
    meta(http-equiv='Content-Type'
      content='text/html; charset=UTF-8')

  body
    div#content-wrap
      div#header
        #header-content
          .logo
          .headline
            | Halloped.fi
          .login-info
            .login-name
              span.label Olet kirjautuneena nimellä:
              br
              span.name Eija Zitting
            a.login-btn(href='#')
      div#navi
        #navi-content
          ul.navi-links
            li: a.home(href='#')
            li: a(href='#') Toimielimet
            li: a(href='#') Haut
            li: a(href='#') Hallopedit
            li: a(href='#') Asiakirjat
            li: a(href='#') Lomakkeet
          form.search
            input.field.search-field(type='text', placeholder='Hae ...')
      div#content
        div#page-content
          include templates/frontpage
          include templates/sidebar
          div.clear

          .modal#create-new-organ
            .content
              h2 Luo uusi toimielin
                a.close-modal(href='#')
              form.new-organ
                input.field.wide(type='text', placeholder='Toimielimen nimi')
                .inline-block
                  label.field-label Toimikauden alkamisaika:
                  input.field.datepicker(type='text', placeholder='Aseta aika')
                .inline-block.no-margin
                  label.field-label Toimikauden päättymisaika:
                  input.field.datepicker(type='text', placeholder='Aseta aika')
                .inline-block
                  input.field(type='text', placeholder='Vastuuhenkilön nimi')
                .inline-block.no-margin
                  input.field(type='text', placeholder='Vastuuhenkilön sähköpostiosoite')
                input.field.half(type='text', placeholder='Nimityksen tekevä henkilö')
                select
                  option(value='Kaikki') Valitse organisaatioyksikkö
                  option(value='Yliopisto') Yliopisto
                  option(value='Opintolinja') Opintolinja
                  option(value='Laitos') Laitos
                .inline-block.no-margin
                  label
                    input(name='type-of-organ', type='radio', value='Lakisääteinen')
                    | Lakisääteinen
                  label
                    input(type='radio', name='type-of-organ', value='Epävirallinen')
                    | Epävirallinen
                textarea.wide(type='textarea', placeholder='Kuvaus toimieliminen toiminnasta')
                .button-row
                  a.cancel-btn(href='#') Peruuta
                  a.submit-btn(href='#') Tallenna

      div#footer
        p Copyright 2012 Halloped.fi
