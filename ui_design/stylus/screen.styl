/* FONT FAMILIES */

basic-fonts = Helvetica, Arial, Sans-Serif


/* COLORS */

color-back-light = #eaf0fb
color-back-dark = #d0d8e6
color-1-dark = #3d5eab
color-1-light = #517ad4
color-2-dark = #3b949d
color-2-light = #58afb8
color-3-dark = #4d8ce5
color-3-light = #72b3ec
color-4-light = #ffffff
color-4-dark = #f1f1f1


/* FUNCTIONS */

gradient(color-1, color-2)
  background-color color-1
  background-image linear-gradient(bottom, color-2 0%, color-1 100%)
  background-image -o-linear-gradient(bottom, color-2 0%, color-1 100%)
  background-image -moz-linear-gradient(bottom, color-2 0%, color-1 100%)
  background-image -webkit-linear-gradient(bottom, color-2 0%, color-1 100%)
  background-image -ms-linear-gradient(bottom, color-2 0%, color-1 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.0, color-2), color-stop(1.0, color-1))

box-shadows(x,y,w,c)
  -moz-box-shadow x y w c
  -webkit-box-shadow x y w c
  -o-box-shadow x y w c
  -ms-box-shadow x y w c
  box-shadow x y w c

box-shadows-inset(x,y,w,c)
  -moz-box-shadow inset x y w c
  -webkit-box-shadow inset x y w c
  -o-box-shadow inset x y w c
  -ms-box-shadow inset x y w c
  box-shadow inset x y w c


/* FORM ELEMENT STYLES */

input.field
  width 148px
  height 24px
  border 1px solid #cacaca
  box-shadows-inset 0 3px 5px #f3f3f3
  padding 0 6px
  margin-right 8px

label.field-label
  font-size 13px
  text-shadow 0 1px 0 #FFF


/* LAYOUT COMPONENT STYLES */
#content-wrap
  width 100%
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -40px

#header, #navi, #content, #footer
  font-family basic-fonts
  color #333

#header
  width 100%
  height 120px
  background #dadada
  #header-content
    width 960px
    height 120px
    margin 0 auto
    position relative
    .logo
      width 140px
      height 90px
      background #bababa
      position absolute
      top 14px
      left 0
    .headline
      height 36px
      display inline-block
      position absolute
      top 40px
      left 164px
      font-size 36px
      text-shadow 0 1px 0 #FFF
    .login-form
      position absolute
      top 32px
      right 0
      margin auto 0
      label
        display block
        margin 0 0 4px 1px
      input.submit-btn
        margin-left -2px

#navi
  width 100%
  height 40px
  background #eaeaea
  margin-top 1px
  #navi-content
    width 960px
    height 40px
    margin 0 auto
    position relative
    ul.navi-links
      position absolute
      left 0
      li
        float left
        border-left 1px solid #CCC
        border-right 1px solid #CCC
        padding 0
        margin 0 0 0 -1px
        a
          font-size 16px
          padding 10px 20px
          line-height 40px
          text-decoration none
          color #333
        a.home
          display block
          padding 0
          margin 9px 20px
          width 24px
          height 22px
          background url('../img/navi-home.png') no-repeat
      li:hover
        background #CCC
    form.search
      width 240px
      height 40px
      position absolute
      right 0
      .search-field
        width 100%
        margin-top 7px

#page-content
  width 960px
  margin 0 auto

#footer
  width 100%
  height 40px
  background #dadada
  font-size 13px
  line-height 38px
  text-align center
  text-shadow 0 1px 0 #FFF

#footer, #push
  height 40px



