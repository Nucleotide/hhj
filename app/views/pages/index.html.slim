doctype html
html
  head
    title Halloped
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    meta(http-equiv='Content-Type'
      content='text/html; charset=UTF-8')

  body
    div#content-wrap
      div#header
        #header-content
          .logo
          .headline
            | Halloped.fi
          / Visible when user has logged in
          .login-info
            .login-name
              span.label Olet kirjautuneena nimell√§:
              br
              span.name Eija Zitting
            a.login-btn(href='#')
          / Visible when user has not been logged in, hidden by default in CSS
          .login-request
            .login-name
              span.label Kirjaudu HAKA-tunnuksilla:
              br
              a.link(href='#') Linkki Hakaan
            a.login-btn(href='#')
      div#navi
        #navi-content
          ul.navi-links
            li: a.home(href='#')
            li: a(href='#') Toimielimet
            li: a(href='#') Haut
            li: a(href='#') Hallopedit
            li: a(href='#') Asiakirjat
            li: a(href='#') Lomakkeet
          form.search
            input.field.search-field(type='text' placeholder='Hae ...')
      div#content
        div#page-content
          = render "open-calls"
          = render "sidebar"
          div.clear

      div#footer
        p Copyright 2012 Halloped.fi

    div#modal-wrap
      .modal#create-new-organ
        = render "create-new-organ"

      .modal#call-for-application
        = render "call-for-application"

      .modal#received-application
        = render "received-application"

      .modal#send-group-message
        = render "send-group-message"
